Program:
    'Name = ''"'-songName=ID'"'-';'
    'bpm = ' bpm=INT';'
    'difficulty = ' difficulty=ID '=' difficultyValue=FLOAT ';'
    setDefinitions*=Set
    'Start {'
        commands+=Command
    '};'
;

Command:
    if=IfStatement|loop=Loop|move=Move|set=[Set]|pause=PauseCommand
;

IfStatement:
    IfCompleteStatement|IfPointsStatement
;

Move:
    ('left'? 'right'? 'up'? 'down'?)#';'
;

IfPointsStatement:
    'if points(' points=INT ') bonus next ' movesWithBonus=INT';'
;

IfCompleteStatement:
    'if complete {'
        ifCommands+=Command
    '} bonus next ' bonusMoves=INT';'
;

Loop:
    'repeat(' timesToRepeat=INT ') {'
        loopCommands+=Command
    '};'
;

Set:
    'Set' name=ID '{'
        commands+=Command
    '};'
;

PauseCommand:
    'pause(' pauseValue=INT ')'
;